<formatPolicy>
  <inherit></inherit>
  <accessFormat>MPG</accessFormat>
  <preservationFormat>MXF</preservationFormat>
  <accessConversionCommand>%ffmpegPath% -i %fileFullName% %accessFileDirectory%%fileTitle%.%accessFormat%</accessConversionCommand>
  <preservationConversionCommand>%ffmpegPath% -i %fileFullName% -vcodec mpeg2video -qscale 1
-qmin 1 -intra -ar 48000 %preservationFileDirectory%%fileTitle%.%preservationFormat%</preservationConversionCommand>
</formatPolicy>
