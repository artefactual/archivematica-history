# By default, boot the first entry.
default 0

# Boot automatically after 30 secs.
timeout 2

color cyan/blue white/blue

splashimage=/boot/splash.xpm.gz

title		Start __LIVECDLABEL__ in Graphical Mode
kernel		/casper/vmlinuz file=/cdrom/preseed/custom.seed boot=casper quiet splash
initrd		/casper/initrd.gz

title		Start __LIVECDLABEL__ in Safe Graphical Mode
kernel		/casper/vmlinuz file=/cdrom/preseed/custom.seed boot=casper xforcevesa quiet splash
initrd		/casper/initrd.gz

title           Install __LIVECDLABEL__
kernel          /casper/vmlinuz file=/cdrom/preseed/custom.seed boot=casper only-ubiquity quiet splash
initrd		/casper/initrd.gz

title		Check the CD/DVD for defects
kernel		/casper/vmlinuz boot=casper integrity-check quiet splash
initrd		/casper/initrd.gz

title		Memory Test
kernel		/boot/memtest

title		Boot the First Hard Disk
root		(hd0)
chainloader +1

