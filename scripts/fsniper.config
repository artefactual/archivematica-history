watch {
     ~/quarantine {
	* {
	    handler = sleep 3s; flock -x /var/lock/viriaccession.lock snipemod.sh %%
	}
    }
     ~/autoAIP {
        * {
            handler = sleep 3s; flock -x /var/lock/bagbuilder.lock /usr/local/OAIS/bagit/bin/bagbuilder "%f" %% 
        }
    }
     ~/qubitdrop {
        * {
            handler = sleep 3s; flock -x /var/lock/qubitupload.lock /usr/local/OAIS/uploader.sh %f %% 
        }
    }

}
